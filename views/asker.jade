extends ./layout/default.jade

block content
  div.freshman
    div.logout
      i.fa.fa-sign-out
    div.fresh-block.login
      div.container
        div.col-xs-12
          h1.header #ASK
          div.panel.panel-default
            div.panel-body
              div.form-group
                div.input-group.name
                  span.input-group-addon
                    i.fa.fa-user
                    span.title รหัสนักศึกษา
                  input.form-control(type="ืีnumber",name='name',placeholder="eg. 12345678901",value="" onkeypress='return event.charCode >= 48 && event.charCode <= 57' maxlength="11")
              div.form-group
                input.btn.btn-primary.btn-block.pull-right.login-btn(type="submit",value="เข้าสู่ระบบ")
          p.credit Powered by #Alchemist

    div.fresh-block.main.inactive
      div.container
        div.col-xs-12
          h1.header #ASK
          div.panel.panel-default
            div.panel-body
              p.name สวัสดีครับ,
                span
              p.name ยินดีต้อนรับเข้าสู่ระบบ ASK
              hr
              div.form-group
                label คำถาม
                textarea.form-control.sender-area(type="text",required)

              div.form-group
                button.btn.btn-primary.btn-block.pull-right.sender-button ส่งคำถาม
          p.credit Powered by #Alchemist

  script(src='/javascript/asker.js')
